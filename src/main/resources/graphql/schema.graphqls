type Query {
    bookById(id: ID): Book
    bookList: [Book]
}

type Mutation {
    addBook(title: String!, author: String!, publicationYear: Int!, price: Float!): Boolean
    updateBook(id: ID!, title: String, author: String, publicationYear: Int, price: Float): Boolean
    deleteBook(id: ID!): Boolean
}

type Book {
    id: ID
    title: String
    author: String
    price: Float
    publicationYear: Int
}